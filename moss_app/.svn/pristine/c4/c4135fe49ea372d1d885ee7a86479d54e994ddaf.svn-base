//라디오버튼, 셀렉트박스 생성
$(document).on("pagebeforeshow","#page_manualList", function(event){
	
	$.ajax({		
		url: url+"WorkOdrList",
		type: "post",
		timeout: 10*1000,
		dataType: "json",
		data: {workerID:'91038948'},
		success: function(result){
			var bodyData=result.body;
			var manualRa="";
			var manualSel="";
			
			if(bodyData.length > 0){
				$.each(bodyData, function(key,val){
					manualRa += "<input type='radio' name='manual' data-theme='d' data-iconpos='right' id='" + val.custName + "' value='" + val.custName + "' checked=''>" +
								 "<label for='" + val.custName + "'>"+val.custName+"</label>\n";
					
					manualSel += "<option value='"+val.custName+"'>"+val.custName+"</option>";
					
				});
			}else{
				manualRa = '<h2>없음</h2>';
				manualSel = '<option value="no">없음</option>';
			}
//라디오버튼생성
			$('#manualRa-controlgroup').html(manualRa).trigger("create");
//셀렉트박스 생성			
			$('#manualField').html(manualSel).trigger("create").selectmenu( "refresh" );

//라디오버튼 선택에 따라 셀렉트박스 선택되어짐			
			var choice = getParam("checked");
			$("#manualField").val(choice).selectmenu( "refresh" );
		},
		error: function(jqXHR, textStatus, errorThrown){
			
		}
	});
});

//라디오 버튼 선택후 확인 클릭시 파라미터 전송
function SendParameter(){
	
	var isChecked=$(":input:radio[name=manual]:checked").val();
	$.mobile.changePage('board_manual.html?checked='+isChecked);	
}

//get parameter 파라미터 받기
	var getParam = function(key){
	    var _parammap = {};
	    document.location.search.replace(/\??(?:([^=]+)=([^&]*)&?)/g, function () {
	        function decode(s) {
	            return decodeURIComponent(s.split("+").join(" "));
	        }

	        _parammap[decode(arguments[1])] = decode(arguments[2]);
	    });

	    return _parammap[key];
	};

