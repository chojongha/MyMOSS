<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="@drawable/top_bar_background" >

    <Button
        android:id="@+id/button1"
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@drawable/reset"
        android:onClick="clickReset" >
    </Button>

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:paddingRight="8dp"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/state_combo_spin_list"
        android:layout_width="44dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:background="@drawable/fillter_bg"
        android:prompt="@string/state_combo"
        android:textColor="@android:color/white" />



    <Spinner
        android:id="@+id/type_combo_spin_list"
        android:layout_width="80dp"
        android:layout_height="30dp"
      android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/state_combo_spin_list"
        android:background="@drawable/fillter_bg"
        android:prompt="@string/order_type_combo"
        android:textColor="@android:color/white" />

</RelativeLayout>