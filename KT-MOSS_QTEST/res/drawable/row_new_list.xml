<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape>
           <gradient
                    android:startColor="#b0bfe8"
                    android:endColor="#98ade1"
                    android:angle="270" />
        </shape> 
    </item>

    <item>    
          <shape>
            
           <gradient android:startColor="#ffffff" android:endColor="#5a9fe8" android:angle="270"/>
    		 <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/>
     		<corners android:radius="3dp"/>
     		<stroke android:width="1dp" android:color="#98ade1" />
        </shape>  
    </item>

    
</selector>
